{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "nestjs-mongoose",
      "args": ["${workspaceFolder}/src/main.ts"],
      "runtimeArgs": [
        "--nolazy",
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register"
      ],
      "cwd": "${workspaceRoot}",
      "protocol": "inspector",
      "outputCapture": "std",
      "envFile": "${workspaceFolder}/.env",
      "autoAttachChildProcesses": true,
      "runtimeExecutable": "/home/jcvaldes/.nvm/versions/node/v16.14.0/bin/node"
    },
    {
      "name": "Debug Jest Tests",
      "type": "node",
      "request": "launch",
      "runtimeArgs": [
        "--inspect-brk",
        "${workspaceRoot}/node_modules/.bin/jest",
        "--runInBand",
        "--coverage",
        "false"
      ],
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
